<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_solved"
        android:id="@+id/crime_solved"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_width="0dp"
        android:contentDescription=""
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/crime_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/crime_title"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/crime_solved"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@id/crime_date"
        android:layout_height="wrap_content"
        android:text="@string/crime_date"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="32dp"
        tools:layout_conversion_absoluteWidth="264dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintRight_toLeftOf="@+id/crime_solved"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toBottomOf="@+id/crime_title"
        android:layout_width="0dp"/>


</android.support.constraint.ConstraintLayout>